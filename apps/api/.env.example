# DeTrust API Environment Variables

# Server
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000

# Database
DATABASE_URL=""

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Blockchain / Web3
# Match the Hardhat node (chainId 31337 on localhost:8545)
RPC_URL=http://localhost:8545
CHAIN_ID=31337

# Smart Contract Addresses (update after deployment)
# Copy these from packages/contracts/deployments/latest.json after running contracts:deploy:local
ESCROW_ADDRESS=
REPUTATION_ADDRESS=
DISPUTE_ADDRESS=

# IPFS / Pinata
PINATA_API_KEY=
PINATA_SECRET_KEY=
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@detrust.local

# AI Service
AI_SERVICE_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=debug

# Secure File Storage
LIGHTHOUSE_API_KEY=
LIGHTHOUSE_UPLOAD_URL=https://upload.lighthouse.storage/api/v0
LIGHTHOUSE_GATEWAY_URL=https://gateway.lighthouse.storage
FILE_ENCRYPTION_SECRET=change-this-to-a-32-byte-secret
# Comma-separated list of previous secrets (oldest or most recent first). Leave blank if not rotating keys.
FILE_ENCRYPTION_SECRET_FALLBACKS=

# Sentry (Error Tracking)
SENTRY_DSN=
