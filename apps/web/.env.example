# DeTrust Web Environment Variables

# API
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# Blockchain Configuration
# Hardhat node defaults to chainId 31337 on localhost:8545
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_RPC_URL=http://localhost:8545

# Smart Contract Addresses (update after deployment)
# Copy the values from packages/contracts/deployments/latest.json after running contracts:deploy:local
NEXT_PUBLIC_ESCROW_ADDRESS=
NEXT_PUBLIC_STABLE_TOKEN_ADDRESS=
NEXT_PUBLIC_REPUTATION_ADDRESS=
NEXT_PUBLIC_DISPUTE_ADDRESS=

# WalletConnect
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# IPFS
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_2FA=true

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
