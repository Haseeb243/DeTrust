{
  "name": "detrust",
  "version": "1.0.0",
  "private": true,
  "description": "Decentralized Trust & Capability Scoring System for Freelancers",
  "author": "DeTrust Team",
  "license": "MIT",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @detrust/database db:generate",
    "db:push": "pnpm --filter @detrust/database db:push",
    "db:migrate": "pnpm --filter @detrust/database db:migrate",
    "db:studio": "pnpm --filter @detrust/database db:studio",
    "db:seed": "pnpm --filter @detrust/database db:seed",
    "contracts:compile": "pnpm --filter @detrust/contracts compile",
    "contracts:test": "pnpm --filter @detrust/contracts test",
    "contracts:deploy:local": "pnpm --filter @detrust/contracts deploy:local",
    "contracts:deploy:testnet": "pnpm --filter @detrust/contracts deploy:testnet",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
